<h1>Parcels</h1>

<h3>Parcels awaiting shipment</h3>

<% if @parcels.any? %>
  <ul>
    <% @parcels.each do |parcel| %>
      <li> <%= parcel.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no parcels to display. </p>
<% end %>

<a href="/parcels/new">Add a new parcel</a>

<% @parcels.each do |parcel| %>
<li><a href="/parcels/<%= parcel.id %>"><%= parcel.name %></a></li>
<% end %>